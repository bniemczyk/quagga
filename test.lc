// demonstrates letrec
fact = 
    letrec f = lambda n . if n == 1 then 1 else n * f (n - 1) in
    f ;

// demonstrates data packing
trip = lambda a b c . { a, b, c } ;

// demonstrates data unpacking
hundred = 
    let { x, y, z } = trip 2 40 20 in 
    (x * y) + z ;

// main is executed by qlcr
main = fact 5 ;
